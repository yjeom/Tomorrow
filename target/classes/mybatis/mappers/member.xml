   </resultMap> -->

  <select id="login"  resultType="memberVO"   parameterType="memberVO" >
	<![CDATA[
		select * from member	
		where id=#{id} and pwd=#{pwd}		
	]]>
  </select>
  
    <select id="joinIdCheck"  resultType="memberVO"   parameterType="memberVO" >
	<![CDATA[
		select id from member where id = #{id}
	]]>
  </select>
    <select id="selectMember"  resultType="memberVO"   parameterType="memberVO" >
	<![CDATA[
		select * from member where id = #{id}
	]]>
  </select>
  
	<select id="selectAllMemberList" resultMap="memResult">
      <![CDATA[
         select * from member order by idx desc	 	
      ]]>
	</select>
    
     <insert id="insertMember"  parameterType="memberVO">
		<![CDATA[
		 insert into member(idx,id,pwd,email)
		 values(member_seq.nextval,#{id}, #{pwd}, #{email})
		]]>      
	</insert>
	
   
   <update id="updateMember"  parameterType="memberVO">
     <![CDATA[
	     update member
	     set pwd=#{pwd}, email=#{email}
	     where
	     id=#{id}
      ]]>      
   </update> 
   <update id="updateReportCount"  parameterType="memberVO">
     <![CDATA[
	    update member 
	    set report_count=report_count+1 
	    where id=#{id}
      ]]>      
   </update> 
   <update id="updateReportCheck"  parameterType="memberVO">
     <![CDATA[
	   update member 
	   set report_check=report_check+1 where id=#{id}
      ]]>      
   </update> 
     
   <delete id="deleteMember"  parameterType="String">
	<![CDATA[
	   delete from  member
	   where
	   id=#{id}
	]]>      
  </delete>
</mapper>